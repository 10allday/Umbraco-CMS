{
    "$schema": "http://json.schemastore.org/template",
    "author": "Umbraco HQ",
    "classifications": [ "Web", "CMS", "Umbraco"],
    "identity": "Umbraco.Templates",
    "name": "Umbraco - Empty Solution",
    "shortName": "umbraco",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "UmbracoSolution", // Will be replaced with the value provided via -n
    "preferNameDirectory": true,
    "symbols": {
        "version": {
            "type": "parameter",
            "datatype": "string",
            "defaultValue": "0.5.0-alpha001",
            "description": "The version of Umbraco to load using NuGet",
            "replaces": "UMBRACO_VERSION_FROM_TEMPLATE"
        },
        "namespaceReplacer": {
            "type": "generated",
            "generator": "coalesce",
            "parameters": {
                "sourceVariableName": "name",
                "defaultValue": "UmbracoSolution",
                "fallbackVariableName": "name"
            },
            "replaces":"Umbraco.Web.UI.NetCore"
        },
        "UseSqlCe":{
            "type": "parameter",
            "datatype":"bool",
            "defaultValue": "false"
        },
        "Framework": {
            "type": "parameter",
            "description": "The target framework for the project.",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "netcoreapp3.1",
                    "description": "Target netcoreapp3.1"
                },
                {
                    "choice": "net5.0",
                    "description": "Target net5.0"
                }
            ],
            "replaces": "netcoreapp3.1",
            "defaultValue": "netcoreapp3.1"
        }
    }
}
